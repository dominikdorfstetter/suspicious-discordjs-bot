{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "lib": ["es2017"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "exclude": ["node_modules", "out", ".next"]
}
